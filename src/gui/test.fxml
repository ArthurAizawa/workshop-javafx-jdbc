<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #f4f4f4;">
    
    <!-- Menu Superior -->
    <top>
        <MenuBar style="-fx-background-color: #2c3e50; -fx-text-fill: white;">
            <Menu text="Arquivo" style="-fx-text-fill: white;">
                <MenuItem text="Sair" />
            </Menu>
            <Menu text="Ajuda" style="-fx-text-fill: white;">
                <MenuItem text="Sobre" />
            </Menu>
        </MenuBar>
    </top>
    
    <!-- Área Central com Tabela -->
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Buscar produto..." style="-fx-pref-width: 300; -fx-padding: 5; -fx-background-radius: 5;"/>
                <Button text="Pesquisar" fx:id="btnPesquisar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;"/>
            </HBox>
            
            <TableView fx:id="tabelaProdutos" style="-fx-background-color: white; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                <columns>
                    <TableColumn text="Nome" fx:id="colNome" />
                    <TableColumn text="Quantidade" fx:id="colQuantidade" />
                    <TableColumn text="Preço" fx:id="colPreco" />
                    <TableColumn text="Categoria" fx:id="colCategoria" />
                </columns>
            </TableView>
        </VBox>
    </center>
    
    <!-- Rodapé com Botões -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-border-radius: 10;">
            <Button text="Adicionar" fx:id="btnAdicionar" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Editar" fx:id="btnEditar" style="-fx-background-color: #f1c40f; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Remover" fx:id="btnRemover" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>
    </bottom>
    
</BorderPane>
